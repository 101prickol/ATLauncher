<!--

REMEMBER - Change the atlauncher.version property below

- Fixed wrong message showing when help button clicked on the RAM setting
- Text on the borders of the Addons, Packs and Instances screen is now slightly bigger
- Upon creating an account your now prompted if you want to use it straight away or not
- Fixed spelling mistake when hiding the Launcher Console
- Fixed NPE when password wasn't remembered on an account
- Clicking cross on mods selection screen now closed the install procedure instead of continuing
- Fixes being able to create instance or play instance if no account is selected
- Added PermGen setting
- Added warning if Launcher is not in it's own empty folder to prevent big messes
- Added Support and Website URL in Pack display

-->

<project name="ATLauncher 3.0" basedir=".">
	<taskdef resource="proguard/ant/task.properties" classpath="C:/Users/Ryan/IdeaProjects/proguard/lib/proguard.jar" />
	<taskdef resource="net/sf/antcontrib/antlib.xml" classpath="C:/ant/lib/ant-contrib-1.0b3.jar" />

	<property name="src.dir" value="src" />
	<property name="build.dir" value="build" />
	<property name="release.dir" value="${build.dir}/release" />
	<property name="buildsrc.dir" value="${build.dir}/src" />
	<property name="bin.dir" value="${build.dir}/compiled" />
	<property name="atlauncher.version" value="3.0.0a5" />

	<mkdir dir="${build.dir}" />
	<mkdir dir="${release.dir}" />

	<delete dir="${buildsrc.dir}" />
	<delete dir="${bin.dir}" />

	<mkdir dir="${buildsrc.dir}" />
	<mkdir dir="${bin.dir}" />

	<copy todir="${buildsrc.dir}">
		<fileset dir="${src.dir}" />
	</copy>

	<replace file="${buildsrc.dir}/com/atlauncher/data/Settings.java" token="&quot;%VERSION%&quot;;" value="&quot;${atlauncher.version}&quot;;" />
	<replace file="${buildsrc.dir}/com/atlauncher/gui/LauncherConsole.java" token="%VERSION%" value="${atlauncher.version}" />
	<replace file="${buildsrc.dir}/com/atlauncher/gui/LauncherFrame.java" token="%VERSION%" value="${atlauncher.version}" />

	<javac srcdir="${buildsrc.dir}" destdir="${bin.dir}" target="1.6" source="1.6" includeantruntime="false" />

	<copy todir="${bin.dir}/resources">
		<fileset dir="${buildsrc.dir}/resources" includes="**" />
	</copy>

	<jar destfile="C:/Users/Ryan/Desktop/ATLauncher.jar" filesetmanifest="mergewithoutmain">
		<manifest>
			<attribute name="Main-Class" value="com.atlauncher.App" />
			<attribute name="Class-Path" value="." />
		</manifest>
		<fileset dir="${bin.dir}" />
	</jar>

	<!-- <proguard configuration="ProGuard.conf"/> -->

	<exec executable="cmd">
		<arg value="/c" />
		<arg value="..\launch4j\launch4jc.exe" />
		<arg value="launch4j.xml" />
	</exec>

	<delete dir="${build.dir}" />
</project>